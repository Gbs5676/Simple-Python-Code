class Player:
    def __init__(self, name, health, attack, defense):
        """
        Initialize a new Player object with the given name, health, attack, and defense.
        :param name: The name of the player.
        :param health: The starting health of the player.
        :param attack: The attack power of the player.
        :param defense: The defense power of the player.
        """
        self.name = name
        self.health = health
        self.attack = attack
        self.defense = defense

    def take_damage(self, damage):
        """
        Reduce the player's health by the given amount of damage.
        :param damage: The amount of damage to be taken.
        """
        self.health -= damage

    def attack_enemy(self, enemy):
        """
        Attack an enemy player, dealing damage equal to the attacking player's attack.
        :param enemy: The enemy player to be attacked.
        """
        damage_dealt = self.attack - enemy.defense
        if damage_dealt > 0:
            enemy.take_damage(damage_dealt)
            print(f"{self.name} atacou {enemy.name} e causou {damage_dealt} de dano.")
        else:
            print(f"{self.name} atacou {enemy.name}, mas o ataque nÃ£o causou dano.")

    def is_alive(self):
        """
        Check if the player is still alive (i.e., has positive health).
        :return: True if the player is alive, False otherwise.
        """
        return self.health > 0
